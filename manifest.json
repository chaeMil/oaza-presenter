{
  "manifest_version": 2,
  "name": "Oáza Presenter [alpha]",
  "short_name": "Oáza Presenter",
  "description": "",
  "version": "0.5.1",
  "offline_enabled": true,
  "minimum_chrome_version": "38",

  "icons": {
    "32": "assets/icon_32.png",
    "48": "assets/icon_48.png",
    "64": "assets/icon_64.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js", "js/background-settings.js"]
    }
  },
  
  "permissions": [
    "syncFileSystem",
    {"fileSystem": ["write", "retainEntries", "directory"]}
  ]
}
